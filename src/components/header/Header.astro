---
import Spotify from '@icons/Spotify.astro'
import HeaderLogin from './HeaderLogin.astro'
import HeaderSearch from './HeaderSearch.astro'
---

<div id='header' class='gap-3 w-full py-2 text-zinc-400'>
  <Spotify />
  <HeaderSearch />
